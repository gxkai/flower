body{
	background-image: url(/resource/flower/image/houtai_bg.png);
	background-repeat: no-repeat;
	font-family: Microsoft Yahei;
}
.login-block{
	width: 600px;
	height: 500px;
	margin: 0 auto;
	box-sizing: border-box;
	padding-top: 100px;
}
.login-block img{
	width: 100%;
}
.login-form{
	width: 380px;
	height: 200px;
	margin: 50px auto 0;
}

.login-form input, button {
	font-family: Microsoft Yahei;
	font-size: 15px!important;
}

.layui-layer-content{
	font-family: Microsoft Yahei;
}

.login-form .login-field-icon{
	font-size: 14px!important;
}

.bottom{
	width:100%;
	height:50px;
    display:table-cell; 
    vertical-align:bottom;
    position: fixed;
    bottom: 0;
}