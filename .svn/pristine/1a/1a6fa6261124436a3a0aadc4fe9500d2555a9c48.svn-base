@CHARSET "UTF-8";
		body{
			padding: 0;
			margin: 0;
			/*border: 1px red solid;*/
		}
		.container{
			width: 100%;
			margin-bottom:100px ;
		}
		.header{
			width: 95%;
			margin: 5px auto;
		}
		.header img{
			width: 100%;
			border-radius: 5px;
		}
		
		.title_div{
			display: flex;align-items: center;
			padding: 5px 0px 5px 25px;
			font-family: "微软雅黑";
			font-size: 14px;
			margin-top: 5px;
		}
		
		.content{
			width: 95%;
			margin: 5px auto;
			/*border: 1px yellow solid;*/
			display: flex;
		  	flex-flow: row wrap;
		  	align-content: flex-start;
		}
		
		.goods{
			width: 95%;
			margin: 5px auto;
			/*border: 1px yellow solid;*/
			
			display: flex;
			flex-flow: row wrap;
			align-content: flex-start;
		}
		
