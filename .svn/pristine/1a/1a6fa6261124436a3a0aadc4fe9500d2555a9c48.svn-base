		.good_btns{
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.sub_btn,.add_btn,.num_show{
			width: 33%;
			height: 3.5em;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		
		.sub_btn,.add_btn{
			background: #fbfbfb;
			color: #eb6876;
			font-weight: 600;
		}
		
		.footer{
			width: 100%;
			border-top: 1px #f9f9f9 solid;
			position: fixed;
			z-index: 100;
			bottom: 0;
  			display: flex;
  			justify-content: center;
 			align-items: center;
 			background: white;
		}
		.span_btn{
			margin: 15px auto;
			width: 80%;
			height: 40px;
			float: left;
			text-align: center;
			box-sizing: border-box;
			padding: 4px 3px;
			color: white;
			background: #eb6876;
			line-height: 30px;
			font-size: 13px;
			overflow: hidden; 
			text-overflow:ellipsis;
			border-radius: 5px;
			outline: none;
		}
		
		.text_div{
			width: 90%;
			margin: 0 auto;
			height: 2.5em;
			border: 1px #ccc solid;
			padding: 5px;
			outline: none;
			word-wrap: break-word;
		    overflow-x: hidden;
		    overflow-y: auto;
		    font-family:"微软雅黑";
		    font-size:12px;
		}