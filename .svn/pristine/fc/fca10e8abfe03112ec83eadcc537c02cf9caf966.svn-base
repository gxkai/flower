	<body>
		<div class="swiper-container">
	        <div class="swiper-wrapper">
	            <div class="swiper-slide"><img src="/resource/flower/image/upload/010.png" /></div>
	            <div class="swiper-slide"><img src="/resource/flower/image/upload/011.png" /></div>
	            <div class="swiper-slide"><img src="/resource/flower/image/upload/012.png" /></div>
	            <div class="swiper-slide"><img src="/resource/flower/image/upload/013.png" /></div>
	        </div>
	        <div class="swiper-pagination"></div>
	    </div>
		<div class="container">
			<div class="esthetics_type">
				<a class="esthetics_type_1_a">生活美学</a>
				<a class="esthetics_type_2_b" href="/esthetics_notice">投稿送花票</a>
			</div>
			<div class="esthetics_list">
				<#list estheticslist as esthetics>
				<div class="esthetics_show" onclick="location.href='/esthetics_detail/${esthetics.id}'">
					<img src="${esthetics.imgurl!}" class="imgsl" />
					<div class="esthetics_show_l">
						<p>${esthetics.title}</p>
						<p>
							<a class="esthetics_t_r">
								<span>花美美FlowerMM</span>
								<span>${esthetics.ctime}</span>
							</a>
						</p>
					</div>
				</div>
				</#list>
			</div>
		</div>
	</body>
