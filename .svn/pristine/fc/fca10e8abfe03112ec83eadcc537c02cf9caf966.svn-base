		<script type="text/javascript">
			var pageno=${pageno},totalpage=${totalpage};
			$().ready(function(){
				var swiper = new Swiper('.swiper-container', {
			        pagination: '.swiper-pagination',
			        paginationClickable: true,
			        spaceBetween: 10,
			    });
				$(window).scroll( function() {
					// 页面的文档高度
				   	var h1 = $(document).height();
				 	// 浏览器的高度
				    var h2 = $(window).height();
				    // 滚动条到顶部的垂直高度
				    var h3 = $(document).scrollTop();
				   	if(h2 + h3 == h1){
				   		if(pageno < totalpage){
				   			var load = layer.load();
				   			$.get('/esthetics/'+(++pageno), function(data){
				   				var html;
				   				$(data).each(function(){
				   					html = '<div class="esthetics_show" onclick="location.href=\'/esthetics_detail/'+ this.id + '\'">' +
					   							'<img src="' + this.imgurl + '" class="imgsl" />' +
												'<div class="esthetics_show_l">' +
													'<p>' + this.title + '</p>' +
													'<p>' +
														'<a class="esthetics_t_r">' +
															'<span>花美美FlowerMM</span>' +
															'<span>' + this.ctime + '</span>' +
														'</a>' +
													'</p>' +
												'</div>' +
											'</div>';			   					
				   					$('.esthetics_list').append(html);
				   				});
				   				layer.close(load);
				   			});
				   		}
				   	}
				}); 
			});
	    </script>
